datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  // TODO: Add more fields as needed
}

model Event {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  // TODO: Add more fields for event details
} 